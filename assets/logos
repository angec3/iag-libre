<!-- Script de filtrage -->
<script>
    document.getElementById('filter').addEventListener('change', function() {
        const filter = this.value;
        const cards = document.querySelectorAll('.ia-card');
        
        cards.forEach(card => {
            card.style.display = (filter === 'all' || card.classList.contains(filter)) 
                ? 'block' 
                : 'none';
        });
    });
</script>
